<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DebugActivity">

    <Button
        android:id="@+id/user_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="User 1"
        app:layout_constraintBottom_toTopOf="@+id/user_2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/user_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="User 2"
        app:layout_constraintBottom_toTopOf="@id/user_3"
        app:layout_constraintTop_toBottomOf="@id/user_1" />

    <Button
        android:id="@+id/user_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="User 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_2" />

</androidx.constraintlayout.widget.ConstraintLayout>